
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <section class="food_section layout_padding">
        <div class="container">    

                <div class="container mt-5">
                    <div class="row">
                        <div class="col-12">
                        <h2 class="text-center mb-4"> Restorant Anlık Mesaj Sayfası</h2>
                        </div>
                    </div>
                    <div class="row p-1">
                        <div class=" col-2">Kullanıcı Adınız: </div>
                        <div class="col-5">
                            <input type="text" id="userInput" class="form-control"/>
                        </div>
                    </div>

                    <div class="row p-1">
                        <div class=" col-2">Mesajınız: </div>
                        <div class="col-5">
                            <input type="text" id="messageInput" class="form-control"/>
                        </div>
                    </div>
                    <div class="row p-1">
                        <div class=" col-2"></div>
                        <div class="col-3">
                            <input type="button" id="sendMessage" value="Mesaj Gönder" class="btn btn-warning" />
                        </div>
                    </div>
                    <div class="row p-1">
                        <div class=" col-12">
                            <hr />
                        </div>     
                    </div>

                    <div class="row p-1">
                        <div class="col-12">
                            <ul id="messageList" class="list-group"></ul>
                        </div>
                    </div>
                </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>
