<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
               Hemen Rezervasyon Yapın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form action="">
                        <div>
                            <input type="text" class="form-control" placeholder="Ad Soyad" required />
                        </div>
                        <div>
                            <input type="tel" class="form-control" placeholder="Telefon Numaranız 5XX" pattern="5[0-9]{9}" maxlength="10" required />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Mail Adresiniz" required />
                        </div>
                        <div>
                            <select class="form-control nice-select wide" required>
                                <option value="" disabled selected>Kaç kişi olacaksınız?</option>
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div>
                            <input type="date" class="form-control" required>
                        </div>
                        <div class="btn_box">
                            <button type="submit">
                                Rezervasyon Yap
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
