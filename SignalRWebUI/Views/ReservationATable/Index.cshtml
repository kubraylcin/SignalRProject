@model CreateReservationDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <!-- book section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="tel" class="form-control" placeholder="Telefon Numaranız 5XX" asp-for="Phone" pattern="5[0-9]{9}" maxlength="10" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Mailiniz" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div>
                                <select class="form-control nice-select wide" asp-for="PersonCount">
                                    <option value="" disabled selected>Kaç kişi?</option>
                                    @for (int i = 1; i <= 20; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <span asp-validation-for="PersonCount" class="text-danger"></span>
                            </div>

                            <div>
                                <textarea class="form-control" placeholder="Açıklama" asp-for="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div>
                                <input type="date" class="form-control" asp-for="Date" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="btn_box">
                                <button type="submit">
                                    Rezervasyon Yap
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container">
                        <iframe src="@ViewBag.location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end book section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    <!-- footer section -->
    <!-- jQery -->
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
    <!-- End Google Map -->

</body>

</html>
