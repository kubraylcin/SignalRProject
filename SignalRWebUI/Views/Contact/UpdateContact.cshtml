@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri Güncelleme İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Bilgileri Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="ContactId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Konum</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="mail">E-Posta</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="footerDescription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="footerDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgilerini Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
