
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">QR CODE OLUŞTURMA İŞLEMLERİ</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<input type="text" name="value" />
					<input type="submit" value="QR Kod Oluştur" class="btn btn-warning"</input>
				</form>

				@if (ViewBag.QRCodeImage != null)
				{
					<h3>Oluşturulan QR Kod:</h3>
					<img src="@ViewBag.QRCodeImage" alt="" style="width: 400px; height: 400px" />
				}
			</div>
		</div>
	</div>
</div>

