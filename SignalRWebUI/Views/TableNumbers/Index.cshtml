@model List< ResultTableNumberDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Masa Listesi </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Masa ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Masa Adı</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
									foreach (var item in Model)
									{
										count++;
										<tr>
											<th>@count</th>
											<td>@item.TableName</td>
											<td><a href="/TableNumbers/DeleteTableNumber/@item.TableNumberId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/TableNumbers/UpdateTableNumber/@item.TableNumberId" class="btn btn-outline-success">Güncelle</a></td>
										</tr>
									}
								else
								{
									<p>Gösterilecek masa yok.</p>
								}
							</tbody>
						</table>
						<a href="/TableNumbers/CreateTableNumber/" class="btn btn-outline-primary">Yeni Masa Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>