@model CreateReservationDto
@{
    ViewData["Title"] = "CreateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="reservationname"> Ad Soyad Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="reservationname">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="phone"> Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="mail"> Mail Adresini Giriniz </label>
								<input type="email" class="form-control" asp-for="Email" id="mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount"> Kişi sayısı Giriniz</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="Date" id="Date">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Rezervasyonu Oluştur</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
